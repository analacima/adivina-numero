//inicializamos las constantes
const INITIAL_SCORE = 20
const MAX_NUMBER = 20

let randomNumber
let score
let highscore
//inicializamos las variables
initData()
function initData() {
  score = INITIAL_SCORE
  highscore = 0
  randomNumber = Math.floor(Math.random() * MAX_NUMBER) + 1
}

// seleccionar todos los elementos del DOM que necesitamos
const messageField = document.querySelector('.message')
const scoreField = document.querySelector('.score')
const highscoreField = document.querySelector('.highscore')
const numberField = document.querySelector('.number')
const checkBtn = document.querySelector('.check')
const guessInput = document.querySelector('.guess')
const againBtn = document.querySelector('.again')

checkBtn.addEventListener('click', checkNumber)

function checkNumber() {
  let number = guessInput.value
  if (isNaN(number)) {
    messageField.textContent = '‚õîÔ∏è No es un n√∫mero'
  } else {
    if (number < randomNumber) {
      messageField.textContent = 'üìâ Muy bajo'
      score--
    } else if (number > randomNumber) {
      messageField.textContent = 'üìà Muy alto'
      score--
    } else {
      messageField.textContent = 'üéâ Correcto'
      highscore = Math.max(score, highscore)
      highscoreField.textContent = highscore
    }
    scoreField.textContent = score
  }
